@model IEnumerable<VideoStoreManager.Models.Movie>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="container-fluid">
        <h1>Movies</h1>
        <button onclick="window.location.href = './Movies/New';" class="btn btn-primary">New Movie</button>
        
        <table class="table table-hover" style="margin-top:10px;">
            <thead>
                <tr>
                    <th scope="col">Movie</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr class="table-danger">
                        <th scope="row">@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</th>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>
